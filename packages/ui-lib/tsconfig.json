{
	"compilerOptions": {
		"lib": ["ES2015", "DOM"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"outDir": "./dist",
		"rootDir": "./src",
		"paths": {
			"@utils/*": ["./src/utils/*"],
			"@elements/*": ["./src/elements/*"]
		}
	},
	"exclude": ["node_modules"],
	"extends": "tsconfig/base.json",
	"include": ["src"]
}
